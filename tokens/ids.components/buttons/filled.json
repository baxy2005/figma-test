{
  "ids": {
    "comp": {
      "button": {
        "color": {
          "primary": {
            "enabled-bg": {
              "value": "{ids.light.selectable.primary.primary-default}",
              "type": "color"
            },
            "hovered-bg": {
              "value": "{ids.comp.button.color.primary.enabled-bg}",
              "type": "color",
              "$extensions": {
                "studio.tokens": {
                  "modify": {
                    "type": "lighten",
                    "value": "{ids.smc.color.modifiers.button.pressed-lightness} ",
                    "space": "hsl"
                  }
                }
              }
            },
            "focused-bg": {
              "value": "{ids.comp.button.color.primary.enabled-bg}",
              "type": "color",
              "$extensions": {
                "studio.tokens": {
                  "modify": {
                    "type": "lighten",
                    "value": "{ids.smc.color.modifiers.button.focused-lightness} ",
                    "space": "hsl"
                  }
                }
              }
            },
            "pressed-bg": {
              "value": "{ids.comp.button.color.primary.enabled-bg}",
              "type": "color",
              "$extensions": {
                "studio.tokens": {
                  "modify": {
                    "type": "darken",
                    "value": "{ids.smc.color.modifiers.button.pressed-lightness} ",
                    "space": "hsl"
                  }
                }
              }
            },
            "disabled-bg": {
              "value": "{ids.light.page.surface.surface-inverese}",
              "type": "color",
              "$extensions": {
                "studio.tokens": {
                  "modify": {
                    "type": "alpha",
                    "value": "{ids.smc.color.modifiers.alpha.disabled}",
                    "space": "hsl"
                  }
                }
              }
            },
            "on-disabled": {
              "value": "{ids.light.page.surface.on-surface}",
              "type": "color",
              "$extensions": {
                "studio.tokens": {
                  "modify": {
                    "type": "lighten",
                    "value": ".5",
                    "space": "lch"
                  }
                }
              }
            },
            "on-enabled": {
              "value": "{ids.light.selectable.primary.on-primary}",
              "type": "color"
            }
          }
        }
      }
    }
  }
}